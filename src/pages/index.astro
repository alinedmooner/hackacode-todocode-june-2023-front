---
import Logo from '../components/LogoComponent.astro'
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Infinity Dream Park</title>
	</head>
	<body>
		<span class="logo"><Logo/></span>
		<p class="greeting">Welcome to Dashboard of</p>
		<h1>Infinity Dream Park</h1>
		<p class="text">Login depending on your rank</p>
		<div class="buttons-container">
			<a href="">Login as admin</a>
			<a href="">Login as employee</a>
		</div>
	</body>
</html>

<style>
	@font-face {
		font-family: 'Mona Sans';
		src:
			url(/Mona-Sans.woff2) format('woff2 supports variations'),
			url(/Mona-Sans.woff2) format('woff2-variations');
		font-weight: 200 900;
		font-stretch: 75% 125%;
	}

	html {
		font-family: 'Mona Sans';
	}

	body {
		margin: 0;
		padding: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		background: #070707;
	}

	h1 {
		font-size: 4rem;
		background: -webkit-linear-gradient(89deg, #BA32D0 0%, #32A1D0 100%);
  	-webkit-background-clip: text;
  	-webkit-text-fill-color: transparent;
	}

	a {
		padding: 0.5rem 1.5rem 0.5rem 1.5rem;
		background: linear-gradient(135deg, #BA32D0 0%, #32A1D0 100%);
		border-radius: 5px;
		backdrop-filter: blur(16px);
		text-decoration: none;
		color: black;
		font-weight: 600;
		margin: 3rem;
	}
 
	a:hover {
		box-shadow: 0 0 8px #BA32D0, 0 0 8px #32A1D0;
	}

	.greeting {
		font-size: 2rem;
		background: linear-gradient(90deg, rgba(230, 230, 230, 0.24) 0%, #E6E6E6 50%, rgba(230, 230, 230, 0.24) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 0.5rem;
	}

	.text {
		font-size: 1rem;
		margin: 0 1rem 5rem 0;
		color: white
	}

	.logo {
		margin-top: 2rem;
	}
</style>
